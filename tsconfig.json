{
    "compilerOptions": {
        "strict": false,
        "target": "ES2017",
        "allowJs": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
